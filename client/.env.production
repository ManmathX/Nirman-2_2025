# Production Environment Variables for Niman2.0 Client (Vercel)

# API Base URL - Vercel deployment
REACT_APP_API_URL=/api

# Application Configuration
REACT_APP_APP_NAME=Niman2.0 Platform
REACT_APP_VERSION=1.0.0
REACT_APP_PLATFORM=vercel

# Build Optimizations for Vercel
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=8192

# Performance Settings
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# Vercel Analytics (Optional)
# REACT_APP_VERCEL_ANALYTICS_ID=your-analytics-id

# Security Settings
REACT_APP_ENABLE_HTTPS_ONLY=true
